<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:loonggg="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_control_shouye"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#00000000">

        <com.example.administrator.yunyue.sc.ObservableScrollView
            android:id="@+id/sv_shouye"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="65dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="50dp"
                            android:background="#33000000"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tv_pager_title"
                                android:layout_width="0dp"
                                android:layout_height="35dip"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="8"
                                android:gravity="center_vertical"
                                android:paddingLeft="8dip"
                                android:text=""
                                android:textColor="#ffffff" />
                            <!--用来动态添加轮播小点-->
                            <LinearLayout
                                android:id="@+id/lineLayout_dot"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="2"
                                android:gravity="center|right"
                                android:orientation="horizontal"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:visibility="gone"></LinearLayout>

                        </LinearLayout>

                        <com.loonggg.rvbanner.lib.RecyclerViewBanner
                            android:id="@+id/rv_banner_1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            loonggg:rvb_indicatorSelectedSrc="@drawable/svg_ic_selected"
                            loonggg:rvb_indicatorUnselectedSrc="@drawable/svg_ic_unselected" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:id="@+id/ll_shouye_two_query"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/bj_bai24"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginLeft="18dp"
                                    android:src="@drawable/search_3x" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="18dp"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:text="搜索"

                                    android:textColor="#191919"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"

                                android:gravity="right"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/nav_icon_inform_3x" />
                            </LinearLayout>
                        </LinearLayout>


                    </FrameLayout>

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="98dp"
                        android:layout_gravity="bottom"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="1dp">

                            <GridView
                                android:id="@+id/gv_lb_x_tu"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:numColumns="auto_fit"
                                android:stretchMode="spacingWidthUniform"></GridView>

                        </LinearLayout>
                    </HorizontalScrollView>

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特别推荐"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/public_icon_refresh_3x"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shouye_zhibo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/ll_shouye_xsms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@mipmap/icon_miaosha_2x" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="限时秒杀"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_shouye_qbdd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@mipmap/sy_qbdd" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:text="全部订单"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_shouye_hbkj"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@mipmap/sy_hblj" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:text="红包卡卷"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_shouye_wdsc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@mipmap/sy_wdsc" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:text="我的收藏"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_shouye_bzyfk"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@mipmap/sy_bzyfk" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:text="帮助与反馈"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/yuan_lan"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/public_icon_maikefeng_3x" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="商城"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/yuan_lan"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/public_icon_shop_3x" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="商城入驻"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/yuan_lan"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/public_icon_news_3x" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="热点新闻"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/yuan_lan"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/public_icon_zhibo_3x" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="热门直播"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/yuan_lan"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/public_icon_phone_3x" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="联系我们"
                                android:textColor="#4A4A4A"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/public_icon_refresh_3x"
                        android:visibility="gone" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="263dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp">

                        <GridView
                            android:id="@+id/gv_tu"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:numColumns="auto_fit"
                            android:stretchMode="spacingWidthUniform"></GridView>

                    </LinearLayout>
                </HorizontalScrollView>

                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cav_shouye_zhixun"
                    android:layout_width="match_parent"
                    android:layout_height="269dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFFFF"
                    android:visibility="gone"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="196dp"
                            android:layout_height="157dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="78dp"
                            android:src="@drawable/graphic_3x" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="68dp"
                                android:layout_marginTop="20dp"
                                android:text="在平台购车最新优惠
八折起"
                                android:textColor="#191919"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginTop="10dp"
                                android:text="即时在线报价"
                                android:textColor="#191919"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginTop="2dp"
                                android:text="免费门口检查"
                                android:textColor="#191919"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginTop="2dp"
                                android:text="当天付款"
                                android:textColor="#191919"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="151dp"
                                android:layout_height="42dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:text="立即购车"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_shouye_two_guanggao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门资讯"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_shouye_two_count"
                        android:layout_width="44dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_lan10"
                        android:gravity="center"
                        android:text="33+"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/public_icon_refresh_3x"
                        android:visibility="gone" />
                </LinearLayout>

                <com.example.administrator.yunyue.sc_gridview.MyGridView
                    android:id="@+id/mgv_shouye_zixun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="60dp"></com.example.administrator.yunyue.sc_gridview.MyGridView>

            </LinearLayout>
        </com.example.administrator.yunyue.sc.ObservableScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
