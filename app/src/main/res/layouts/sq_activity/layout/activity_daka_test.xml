<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_dk_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back1x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="打卡"
            android:textColor="#000000"
            android:textSize="17.5sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/dk_bj"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_daka_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">


                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:src="@drawable/btn_qiandao_bg_3x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="签到"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="每日赠送50钻石，连续15天送1000钻石"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="424dp"
                android:layout_marginBottom="92dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="32dp"
                android:background="@mipmap/dk"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="9dp"
                        android:src="@drawable/icon_rili_3x" />

                    <TextView
                        android:id="@+id/tv_dk_rq"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="2019-04-23"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:text="在签到5天就可以送500钻石"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="26dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="日"
                        android:textColor="@color/theme"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一"
                        android:textColor="@color/theme"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二"
                        android:textColor="@color/theme"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="三"
                        android:textColor="@color/theme"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="四"
                        android:textColor="@color/theme"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="五"
                        android:textColor="@color/theme"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="六"
                        android:textColor="@color/theme"
                        android:textSize="12sp" />

                </LinearLayout>

                <GridView
                    android:id="@+id/gv_daka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:horizontalSpacing="1dp"
                    android:numColumns="7"
                    android:verticalSpacing="1dp"></GridView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
