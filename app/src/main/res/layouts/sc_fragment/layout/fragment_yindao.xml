<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_login_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_yindao_ljty"
            android:layout_width="121dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yd_tybg"
            android:gravity="center"
            android:text="@string/ljty"
            android:textColor="#FF6801"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/yuan1_3x" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="192dp"
        android:layout_marginTop="109dp"
        android:src="@drawable/beijing_13x" />

    <TextView
        android:id="@+id/tv_qdy_tg"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_ydtg"
        android:gravity="center"
        android:text="@string/tiaoguo"
        android:textColor="#FF6801"
        android:textSize="13sp" />

</FrameLayout>
