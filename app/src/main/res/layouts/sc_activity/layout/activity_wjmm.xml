<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_wjmm_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/header3x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="#050505"
            android:textSize="18sp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbcbc6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/denglu_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="21dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/shouji" />

            <EditText
                android:id="@+id/et_wjmm_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="@string/qsrsjhm"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/denglu_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/yanzhegnma" />

            <EditText
                android:id="@+id/et_wjmm_yzm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/qsryzm"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_wjmm_fs"
                android:layout_width="102dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:background="@drawable/login"
                android:singleLine="true"
                android:text="@string/hqyzm"
                android:textColor="@color/white_c"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/denglu_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/mima" />

            <EditText
                android:id="@+id/et_wjmm_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/qsrdlmm"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_wjmm_password"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:focusable="true"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/hong"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/denglu_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/mima" />

            <EditText
                android:id="@+id/et_wjmm_checkpassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/qzycqrmm"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_wjmm_checkpassword"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:focusable="true"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/hong"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_wjmm_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login"
        android:text="@string/queren"
        android:textColor="@color/white_c"
        android:textSize="17sp" />

</LinearLayout>