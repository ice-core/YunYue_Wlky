<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_c"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_dpzy_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back1x" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="27dp"
            android:layout_weight="1"
            android:background="@drawable/bj_f4f4f4_15"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/search2x" />

            <EditText
                android:id="@+id/et_dpzy_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:cursorVisible="false"
                android:hint="搜索商品"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:text=""
                android:textColor="#333333"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dpzy_fl"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="27dp"
            android:src="@drawable/btn_fenlei"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_dpzy_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/ll_dpzy_dpxq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="17dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_dpzy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App产品自营旗舰店"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/btn_next_arrow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_dpzy_is_attention"
                    android:layout_width="65dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bk_dfdfdf_12"
                    android:gravity="center"
                    android:text="已关注"
                    android:textColor="#999999"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="15dp"
                    android:background="@drawable/bj_theme_10"
                    android:gravity="center"
                    android:text="关注人数"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_dpzy_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="156.3万人"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/ll_dpzy_sy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dpzy_sy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/theme"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dpzy_sy_xhx"
                android:layout_width="38dp"
                android:layout_height="3dp"
                android:background="@color/theme" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dpzy_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dpzy_sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商品"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dpzy_sp_xhx"
                android:layout_width="38dp"
                android:layout_height="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dpzy_hd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dpzy_hd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dpzy_hd_xhx"
                android:layout_width="38dp"
                android:layout_height="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dpzy_sx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dpzy_sx"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上新"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dpzy_sx_xhx"
                android:layout_width="38dp"
                android:layout_height="3dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4" />

    <ScrollView
        android:id="@+id/sv_dpzy_sy_zy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/ll_dpzy_sy_zy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp">

                <com.youth.banner.Banner
                    android:id="@+id/banner_dpzy"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="63dp"
                    android:layout_weight="1"
                    android:src="@drawable/youhuiquan1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/youhuiquan2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/youhuiquan3" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridView
                        android:id="@+id/gv_dpzy_yhj"
                        android:layout_width="fill_parent"
                        android:layout_height="63dp"
                        android:gravity="center"
                        android:numColumns="auto_fit"
                        android:stretchMode="spacingWidthUniform"></GridView>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_dpzy_cp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MAC"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多选择"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/btn_next_arrow" />

            </LinearLayout>

            <com.example.administrator.yunyue.sc_gridview.MyGridView
                android:id="@+id/mgv_dpzy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:verticalSpacing="5dp"></com.example.administrator.yunyue.sc_gridview.MyGridView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_dpzy_zy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_dpzy_px"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <Spinner
                android:id="@+id/spinner_px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_dpzy_tuijian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/theme"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_dpzy_xl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="销量"
                android:textColor="#000000"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_dpzy_jg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_dpzy_jg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="价格"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_dpzy_jg"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_dpzy_jkyh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="仅看有货"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:background="#DFDFDF" />

            <LinearLayout
                android:id="@+id/ll_dpzy_xsfs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/iv_dpzy_xsfs"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/btn_mulu" />
            </LinearLayout>


        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshGridView xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_grid_dpzy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:horizontalSpacing="3dp"
            android:numColumns="2" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_dpzy_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="在线客服"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:background="#CCCCCC"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dpzy_rmfl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热门分类"
            android:textColor="#333333"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>