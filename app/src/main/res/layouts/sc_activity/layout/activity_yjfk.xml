<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_yjfk_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_fjsc_qrdd_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/btn_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_yjfk_jylx"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="建议类型"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_yjfk_jylx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="请选择"
            android:textColor="@color/hui999999"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/arrow_next" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_yjfk_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="清晰的标题会更快的被审核"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/hui999999"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/f4f4f4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="详细描述"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_yjfk_xxms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="left"
            android:hint="问题详细包含问题描述，业务影响，以及建议方案"
            android:maxLength="120"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_yjfk_xxms_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:text="0/120"
            android:textColor="@color/cccccc"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/f4f4f4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="上传凭证(最多3张)"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.example.administrator.yunyue.sc_gridview.MyGridView
        android:id="@+id/mgv_yjfk_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15dp"
        android:numColumns="3" />

    <ImageView
        android:layout_width="99dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:src="@mipmap/image_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="21dp"
        android:layout_weight="1"
        android:background="@color/f4f4f4">

        <TextView
            android:id="@+id/tv_yjfk_tj"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="59dp"
            android:layout_marginRight="68dp"
            android:background="@drawable/bj_theme_24"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>