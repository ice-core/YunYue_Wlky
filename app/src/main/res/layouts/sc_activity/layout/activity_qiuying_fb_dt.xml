<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/ll_fbdt_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView

                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/back_2x" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qiuying_fb_dt_dz"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_local" />

            <TextView
                android:id="@+id/tv_qiuying_fb_dt_dz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="上海市"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/ll_qiuying_dt_gyf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_qiuying_dt_gyf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="供应方"
                android:textColor="@color/theme"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_qiuying_dt_gyf_xhx"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/theme" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qiuying_dt_xqf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_qiuying_dt_xqf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="需求方"
                android:textColor="#BBBCCD"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_qiuying_dt_xqf_xhx"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/theme"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f4f4f4" />

    <LinearLayout
        android:id="@+id/ll_dt_xqf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_dongtai_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="写下您可以提供的服务"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:text=""

            android:textColor="@color/hei333333"
            android:textSize="12sp" />

        <com.example.administrator.yunyue.sc_gridview.MyGridView
            android:id="@+id/mgv_dongtai_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:numColumns="3"></com.example.administrator.yunyue.sc_gridview.MyGridView>

        <TextView
            android:id="@+id/tv_dongtai_ljfb"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="58dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bj_theme_24"
            android:gravity="center"
            android:text="立即发布"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>