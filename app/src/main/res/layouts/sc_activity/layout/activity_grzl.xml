<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_grzl_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back1x" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="认证信息"
            android:textColor="#050505"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_grzl_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="保存"
            android:textColor="@color/theme"
            android:textSize="14sp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f4f4f4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="个人资料"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_grzl_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入您的真实姓名"
            android:text=""
            android:textColor="@color/hei666666"
            android:textColorHint="@color/cccccc"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/xb"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_grzl_sex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_grzl_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:hint="请选择性别"
                android:text=""
                android:textSize="14sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/arrow_next" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份证号"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_grzl_id_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="输入身份证号"
            android:text=""
            android:textColor="@color/hei666666"
            android:textColorHint="@color/cccccc"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的地址"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_grzl_dz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="输入地址"
            android:text=""
            android:textColor="@color/hei666666"
            android:textColorHint="@color/cccccc"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/f4f4f4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="紧急联系人"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_grzl_jjlxr_name1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="5"
            android:background="@drawable/bj_4_f4f4f4"
            android:gravity="center"
            android:hint="姓名"
            android:textColor="@color/hei666666"
            android:textColorHint="@color/hui999999"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="3"
            android:background="@drawable/bj_4_f4f4f4">

            <Spinner
                android:id="@+id/sp_grzl_jjlxr_relation1"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/lxrgx"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_grzl_jjlxr_phone1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:background="@drawable/bj_4_f4f4f4"
            android:gravity="center"
            android:hint="联系方式"
            android:textColor="@color/hei666666"
            android:textColorHint="@color/hui999999"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_grzl_jjlxr_name2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="5"
            android:background="@drawable/bj_4_f4f4f4"
            android:gravity="center"
            android:hint="姓名"
            android:textColor="@color/hei666666"
            android:textColorHint="@color/hui999999"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="3"
            android:background="@drawable/bj_4_f4f4f4">

            <Spinner
                android:id="@+id/sp_grzl_jjlxr_relation2"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/lxrgx"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_grzl_jjlxr_phone2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:background="@drawable/bj_4_f4f4f4"
            android:gravity="center"
            android:hint="联系方式"
            android:textColor="@color/hei666666"
            android:textColorHint="@color/hui999999"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_grzl_jjlxr_name3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="5"
            android:background="@drawable/bj_4_f4f4f4"
            android:gravity="center"
            android:hint="姓名"
            android:textColor="@color/hei666666"
            android:textColorHint="@color/hui999999"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="3"
            android:background="@drawable/bj_4_f4f4f4">

            <Spinner
                android:id="@+id/sp_grzl_jjlxr_relation3"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/lxrgx"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_grzl_jjlxr_phone3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:background="@drawable/bj_4_f4f4f4"
            android:gravity="center"
            android:hint="联系方式"
            android:textColor="@color/hei666666"
            android:textColorHint="@color/hui999999"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>