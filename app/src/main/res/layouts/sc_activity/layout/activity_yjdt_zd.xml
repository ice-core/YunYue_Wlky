<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_zd_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView

                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/back_2x" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="账单"
            android:textColor="#050505"
            android:textSize="17sp" />


    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/ll_yjdt_zc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_yjdt_zc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="支出"
                android:textColor="@color/theme"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_yjdt_zc_xhx"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/theme" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yjdt_sr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_yjdt_sr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收入"
                android:textColor="#BBBCCD"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_yjdt_sr_xhx"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/theme"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f4f4f4" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#00000000">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.administrator.yunyue.sc_gridview.MyGridView
                android:id="@+id/mgv_yjdt_zd"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.example.administrator.yunyue.sc_gridview.MyGridView>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>