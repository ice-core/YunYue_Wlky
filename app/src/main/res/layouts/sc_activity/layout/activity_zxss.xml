<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_zxss_back"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back1x" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/bk_999999_14"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12.4dp"
                android:layout_height="12.6dp"
                android:layout_marginLeft="10.8dp"
                android:src="@drawable/search2x" />

            <EditText
                android:id="@+id/et_zxss_query"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:hint="搜索"
                android:lines="1"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshGridView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_grid_zxss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrMode="both" />


</LinearLayout>
