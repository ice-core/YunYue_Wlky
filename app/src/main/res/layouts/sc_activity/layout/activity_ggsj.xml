<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:loonggg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center">


        <ImageView
            android:id="@+id/iv_ggsj_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/header3x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="更改手机"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_ggsf_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:text="保存"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbcbc6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_marginTopPercent="7.3%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white_c"
            android:gravity="center_vertical"
            android:hint="请输入手机号">

            <EditText
                android:id="@+id/et_ggsj_shouji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_ggsj_sc"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/cancelsmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:background="@color/white_c"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_ggsj_yzm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textSize="13sp" />

            <Button
                android:id="@+id/bt_ggsj_hqyzm"
                android:layout_width="102dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/login"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="发送验证码"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>