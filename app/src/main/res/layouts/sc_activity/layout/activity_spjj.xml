<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:loonggg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_spjj_xuanze"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="41dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_chanpin1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_chanpin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="产品"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jianjie1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_jianjie1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="简介"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pinglun1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_pinglun1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="评论"
                android:textColor="#999999"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/ll_spjj_jrgwc"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/theme"
            android:gravity="center">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="11dp"
                android:src="@mipmap/gouw" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/white_c"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_spjj_back"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_spjj_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_left" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="商品简介"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_spjj_back"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_gouwhuche" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <com.example.administrator.yunyue.sc.ObservableScrollView
            android:id="@+id/sv_spjj_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_spjj_log"
                    android:layout_width="match_parent"
                    android:layout_height="355dp"
                    android:orientation="vertical">

                    <com.youth.banner.Banner
                        android:id="@+id/banner_cpjj"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.youth.banner.Banner>

                    <com.loonggg.rvbanner.lib.RecyclerViewBanner
                        android:id="@+id/rv_cpjj_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        loonggg:rvb_indicatorSelectedSrc="@drawable/svg_ic_selected"
                        loonggg:rvb_indicatorUnselectedSrc="@drawable/svg_ic_unselected" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_spjj_xuanze1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_chanpin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_chanpin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="产品"
                            android:textColor="#999999"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_jianjie"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@drawable/bg1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_jianjie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="简介"
                            android:textColor="#999999"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pinglun"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@drawable/bg1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_pinglun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="评论"
                            android:textColor="#999999"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <com.example.administrator.yunyue.sc.ScrollByViewpager
                    android:id="@+id/vp_cpjj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="true"></com.example.administrator.yunyue.sc.ScrollByViewpager>

            </LinearLayout>

        </com.example.administrator.yunyue.sc.ObservableScrollView>
    </FrameLayout>

</FrameLayout>

