<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_shouhouzt_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back1x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="售后服务"
            android:textColor="#172434"
            android:textSize="17sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_shfw"
        android:layout_width="101dp"
        android:layout_height="106dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/image_tongguo_2x" />

    <TextView
        android:id="@+id/tv_shfw_shzt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="审核通过"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_shfw_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="卖家审核通过，请上传快递编号"
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_shfw_sckdbh"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="143dp"
        android:background="@drawable/bg_lan25"
        android:gravity="center"
        android:text="上传快递编号"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
