<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:loonggg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_c"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_pl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_pl_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back1x" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发表评价"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <Button
                android:id="@+id/bt_pl"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/theme"
                android:textSize="14sp" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.administrator.yunyue.sc_gridview.MyGridView
                android:id="@+id/mgv_pinglun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.example.administrator.yunyue.sc_gridview.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="店铺评分"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="物流服务"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_pjfb_wl_1"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_wl_2"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_wl_3"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_wl_4"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_wl_5"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="服务态度"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_pjfb_fw_1"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_fw_2"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_fw_3"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_fw_4"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />

                <ImageView
                    android:id="@+id/iv_pjfb_fw_5"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/shouchang" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>