<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beijing_2x"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/lianxiang" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="108dp"
            android:layout_marginRight="108dp"
            android:src="@drawable/lxsw13_3x" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:lineSpacingExtra="21dp"
            android:text="@string/jj"
            android:textColor="#EFD167"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ewfg_2x" />
            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/tfh_2x" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_c"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivlogin"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/denglu_xuanzhong" />

                    <TextView
                        android:id="@+id/tvlogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/denglu"
                        android:textColor="@color/theme"
                        android:textSize="17sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivlogin_bg"
                    android:layout_width="59dp"
                    android:layout_height="2dp"
                    android:background="@color/theme" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zhuce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivzhuce"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/zhuce" />

                    <TextView
                        android:id="@+id/tvzhuce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/zhuce"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivzhuce_bg"
                    android:layout_width="59dp"
                    android:layout_height="2dp"
                    android:background="@null" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cbcbc6" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>