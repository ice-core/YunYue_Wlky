<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_ss_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/back1x" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sousuo_query"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/bj_ededed_14"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/search_3x" />

            <EditText
                android:id="@+id/et_sousuo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:hint="搜索"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:text=""
                android:textColor="#333333"
                android:textColorHint="#666666"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_ss_qx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/theme"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ss_lsjl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="历史搜索"
                android:textColor="#333333"
                android:textSize="14sp" />

            <com.lzt.flowviews.view.FlowView
                android:id="@+id/fv_ss_lsjl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_ss_rmss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="热门搜索"
                android:textColor="#333333"
                android:textSize="14sp" />

            <com.lzt.flowviews.view.FlowView
                android:id="@+id/fv_ss_rmss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>