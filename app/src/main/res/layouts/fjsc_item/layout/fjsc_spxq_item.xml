<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fjsc_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_spjj_item"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_spjj_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:text="米锅巴"
        android:textColor="#333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_spjj_item_yuexiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:text="月售21"
        android:textColor="#666666"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_spjj_item_jiage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:text="￥21"
            android:textColor="#FC2449"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/iv_spjj_item_jia"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_add_3x" />

        <TextView
            android:id="@+id/tv_spjj_item_xgg"
            android:layout_width="49dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_lan12"
            android:gravity="center"
            android:text="选规格"
            android:textColor="#FFFFFF "
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />
</LinearLayout>
