<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_shequn_hyzl_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iv_shequn_hyzl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/userpic1_1x" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_shequn_hyzl_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="污秋"
                    android:textColor="#000000"
                    android:textSize="17.5dp" />

                <LinearLayout
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="9dp"
                    android:background="#4A90E2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="9.9dp"
                        android:layout_height="9.9dp"
                        android:src="@drawable/icon_man_3x" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shequn_hyzl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="企业家联合汇"
                android:textColor="#21AEB0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
