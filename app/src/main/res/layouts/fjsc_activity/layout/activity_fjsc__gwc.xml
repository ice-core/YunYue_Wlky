<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_fjsc_gwc_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back1x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="购物车"
            android:textColor="#000000"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_fjsc_gwc_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:text="编辑"
                android:textColor="@color/hei333333"
                android:textSize="14sp" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_shopping_kong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="177dp"
            android:layout_height="177dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/image_2x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="26dp"
            android:text="购物车是空的，快去逛逛吧"
            android:textColor="#999999"
            android:textSize="14sp" />

    </LinearLayout>


    <GridView
        android:id="@+id/gv_fjsc_gwc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></GridView>

    <LinearLayout
        android:id="@+id/ll_fjsc_gwc_sc"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cb_fjsc_gwc_qb"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/cb"
                android:button="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="全选"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fjsc_gwc_sc"
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_lan17"
                android:gravity="center"
                android:text="删除"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>