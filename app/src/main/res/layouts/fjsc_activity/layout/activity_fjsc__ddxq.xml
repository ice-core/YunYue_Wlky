<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_fjsc_ckdd_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_fjsc_qrdd_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back1x" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="#050505"
            android:textSize="17sp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F6F6F6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_fjsc_ddxq_zfwc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="53dp"
                    android:src="@mipmap/image_dingdan" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付成功"
                        android:textColor="@color/hei333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_state1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="当前订单支付完成"
                        android:textColor="@color/hei333333"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fjsc_ddxq_ddwc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_fjsc_ddxq_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lines="2"
                    android:text="感谢您对生态云商城的信任，期待再次光临"
                    android:textColor="@color/hei333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_sqtk1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bk_cccccc_2"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="申请退款"
                        android:textColor="@color/hei333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_pj"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/bj_theme_2"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="店铺评价"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fjsc_ddxq_tkcg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/theme"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:text="退款成功"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_tksj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="2019年01月12日  19:39"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="退款金额"
                        android:textColor="@color/hei333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_goods_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="￥46.2"
                        android:textColor="#FC2449"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F1F1F1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_shop" />

                <TextView
                    android:id="@+id/tv_fjsc_ddxq_storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/hei333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.example.administrator.yunyue.sc_gridview.MyGridView
                android:id="@+id/mgv_fjsc_ddxq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="实付款"
                    android:textColor="@color/hei333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_fjsc_ddxq_totle_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:textColor="#FC2449"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1E1E1" />

            <LinearLayout
                android:id="@+id/ll_fjsc_ddxq_yjsdsj"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="预计送达时间"
                    android:textColor="@color/hei333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_fjsc_ddxq_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12：30"
                    android:textColor="@color/theme"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F1F1F1" />

            <LinearLayout
                android:id="@+id/ll_qrdd_dzxz"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#ffffff">


                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/dizhi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_fjsc_ddxq_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#050505"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_fjsc_ddxq_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#050505"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_dizhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="地址："
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:text="订单信息"
                    android:textColor="@color/hei333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fjsc_ddxq_order_no"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:text="订单编号: 32245154252"
                    android:textColor="@color/hei666666"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_fjsc_ddxq_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_cause"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center_vertical"
                        android:text="退款原因：拍错了，重新拍"
                        android:textColor="@color/hei666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_goods_price"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center_vertical"
                        android:text="退款金额：￥46.2"
                        android:textColor="@color/hei666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_goods_num"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center_vertical"
                        android:text="申请件数：2"
                        android:textColor="@color/hei666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_apply_time"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center_vertical"
                        android:text="申请时间：2019-01-15 08:54"
                        android:textColor="@color/hei666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fjsc_ddxq_refund_no"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center_vertical"
                        android:text="退款编号：152512615155115451"
                        android:textColor="@color/hei666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_fjsc_ddxq_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:text="创建时间: 2019-01-10"
                    android:textColor="@color/hei666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_fjsc_ddxq_pay_time"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:text="支付时间: 2019-01-10"
                    android:textColor="@color/hei666666"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#F1F1F1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="1"
                android:background="#F1F1F1" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_fjsc_ddxq_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_fjsc_ddxq_sqtk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="申请退款"
            android:textColor="@color/hei333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_fjsc_ddxq_tab1"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/dz"
            android:gravity="center"
            android:text="联系卖家"
            android:textColor="@color/hei333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fjsc_ddxq_tab2"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/dz"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/hei333333"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
