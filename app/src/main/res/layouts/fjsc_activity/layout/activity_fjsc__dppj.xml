<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_fjsc_dppj_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_fjsc_qrdd_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back1x" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="店铺评价"
            android:textColor="#050505"
            android:textSize="17sp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F6F6F6" />

    <TextView
        android:id="@+id/tv_fjsc_dppj_shangjia_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/hei333333"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fjsc_dppj_logo"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="9dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="商品评分"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <GridView
                    android:id="@+id/gv_fjsc_dppj_dianpufen"
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:numColumns="5">

                </GridView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_fjsc_dppj_dianpufen1"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@mipmap/shouchang" />

                    <ImageView
                        android:id="@+id/iv_fjsc_dppj_dianpufen2"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/shouchang" />

                    <ImageView
                        android:id="@+id/iv_fjsc_dppj_dianpufen3"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/shouchang" />

                    <ImageView
                        android:id="@+id/iv_fjsc_dppj_dianpufen4"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/shouchang" />

                    <ImageView
                        android:id="@+id/iv_fjsc_dppj_dianpufen5"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/shouchang" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#F4F4F4"
            android:gravity="center">


            <EditText
                android:id="@+id/et_fjsc_dppj_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/et"
                android:gravity="top"
                android:hint="亲，我们非常重视您给我们提出的宝贵建议，帮助我们不断完善产品"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_fjsc_dppj_img1"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:src="@drawable/add_pic" />

            <ImageView
                android:id="@+id/iv_fjsc_dppj_img2"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:id="@+id/iv_fjsc_dppj_img3"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_marginLeft="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/cb_pingjia_is_anonymous"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/cb"
                android:button="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="匿名评价"
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的评价能帮助其他小伙伴哦"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F4F4F4" />


    </LinearLayout>

    <TextView
        android:id="@+id/et_fjsc_dppj_tj"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bj_theme_24"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>