<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_jky_ylyxq_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <!--    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginBottom="17dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/bk_f4f4f4_4"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_jky_ylyxq_item_img"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_jky_ylyxq_item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#20000000"
                android:gravity="center"
                android:text="暂无房源"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jky_ylyxq_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="一室一厅"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bj_theme_4"
                android:gravity="center"
                android:text="预定"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_jky_ylyxq_item_presentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:singleLine="true"
            android:text="精装修一室一卫全功能居住"
            android:textColor="@color/hui999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_jky_ylyxq_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="7dp"
            android:singleLine="true"
            android:text="￥400"
            android:textColor="@color/theme"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定金："
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_jky_ylyxq_item_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222"
                android:textColor="@color/theme"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="工分"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>


    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>
