<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_splb_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_c"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_splb"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_splb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1.16dp"
            android:lineSpacingMultiplier="1.16"
            android:lines="2"
            android:text="临时停车号码牌挪车电话牌装饰用"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="12dp"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#E51C23"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_splb_q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="244"
                android:textColor="#FC2449"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_splb_shangjianame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="布格朗旗舰店"
                android:textColor="#999999"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="6dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/arrow_next" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
