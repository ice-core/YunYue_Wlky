<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_widthPercent="100%">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                app:layout_heightPercent="80%"
                app:layout_widthPercent="100%">

                <ImageView
                    android:id="@+id/iv_scdd_img"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bitmap2x"
                    app:layout_heightPercent="80%"
                    app:layout_widthPercent="25%" />

                <ImageView
                    android:id="@+id/iv_scdd_img1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bitmap2x"
                    app:layout_heightPercent="80%"
                    app:layout_widthPercent="25%" />

                <ImageView
                    android:id="@+id/iv_scdd_img2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bitmap2x"
                    app:layout_heightPercent="80%"
                    app:layout_widthPercent="25%" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="right"
                app:layout_heightPercent="20%"
                app:layout_widthPercent="100%">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="共"
                    android:textColor="@color/black"
                    app:layout_heightPercent="100%"
                    app:layout_textSizePercent="40%" />
                <TextView
                    android:id="@+id/tv_scdd_goods_num_and"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="3"
                    android:textColor="@color/black"
                    app:layout_heightPercent="100%"
                    app:layout_textSizePercent="40%" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="件商品"
                    android:textColor="@color/black"
                    app:layout_heightPercent="100%"
                    app:layout_textSizePercent="40%" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@color/black"
                    app:layout_heightPercent="100%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_textSizePercent="40%" />
                <TextView
                    android:id="@+id/tv_scdd_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="16180.00"
                    android:textColor="@color/black"
                    app:layout_heightPercent="100%"
                    app:layout_textSizePercent="40%" />

            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_fkjl_yqsc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="right"
            app:layout_heightPercent="6%"
            app:layout_widthPercent="100%">

            <TextView
                android:id="@+id/tv_scdd_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="#6495ED"
                app:layout_heightPercent="80%"
                app:layout_marginRightPercent="2%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="20%" />

            <TextView
                android:id="@+id/tv_scdd_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="付款"
                android:textColor="#ffffff"
                app:layout_heightPercent="80%"
                app:layout_marginRightPercent="2%"
                app:layout_textSizePercent="30%"
                app:layout_widthPercent="20%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
