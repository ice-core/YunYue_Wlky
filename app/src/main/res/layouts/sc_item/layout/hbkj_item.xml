<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_hbkj"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/cb"
            android:button="@null"
            android:paddingLeft="10dp"
            android:textColor="#050505"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hbkj"
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/hbkj_item"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="@color/theme"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_hbkj_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="100"
                    android:textColor="@color/theme"
                    android:textSize="29sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hbkj_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="满88.00可用"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_hbkj_yxq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="有效期至：2018-11-22"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_hbkj_ljsy"
                android:layout_width="74dp"
                android:layout_height="28dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bj_theme_10"
                android:gravity="center"
                android:text="@string/ljsy"
                android:textColor="@color/white_c"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>