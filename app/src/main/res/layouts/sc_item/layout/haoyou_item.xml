<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llCatalog"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#DFDFDF"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCatalog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/ck_haoyou"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"

            android:background="@drawable/cb"
            android:button="@null"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_haoyou_item"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/iv_haoyou_item"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_addprople" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_haoyou_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="新的朋友"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFDFDF" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
