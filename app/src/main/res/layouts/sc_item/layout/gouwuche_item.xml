<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_gouwuche_item_storename"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_gouwuche_item_storename"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:button="@drawable/cb"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_shop" />

            <TextView
                android:id="@+id/tv_gouwuche_item_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="索尼商城"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/bg_gwc"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_gouwuche_item_goods"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"

            android:layout_marginLeft="5dp"
            android:background="@null"
            android:button="@drawable/cb" />

        <LinearLayout
            android:id="@+id/ll_gwc_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/iv_gouwuche_item_original_img"
                android:layout_width="84dp"
                android:layout_height="84dp"

                android:src="@drawable/image1_gwc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gouwuche_item_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:lines="1"
                    android:text="英语口语900句：最新英美双音音速版"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gouwuche_item_goods_guige"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#E51C23"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_gouwuche_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17.70"
                        android:textColor="#E51C23"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_gouwuche_item_yj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="39.80"
                        android:textColor="#999999"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_gouwuche_item_jia"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/btn_substrack" />

                    <TextView
                        android:id="@+id/tv_gouwuche_goods_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_gouwuche_item_jian"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/btn_add" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
