<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_c">

    <LinearLayout
        android:id="@+id/ll_dpzy_sp_item_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_dpzy_sp_item_img_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pro1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dpzy_sp_item_goods_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1.5dp"
                android:layout_marginRight="1.5dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="1.5dp"
                android:lines="2"
                android:text="傍海深红 深山野生普洱茶熟普洱茶茶饼"
                android:textColor="#333333"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#E51C23"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_dpzy_sp_item_shop_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13832"
                    android:textColor="#E51C23"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tv_dpzy_sp_item_comment_count_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31924条评价"
                    android:textColor="#999999"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_dpzy_sp_item_comment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="好评99%"
                    android:textColor="#999999"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
