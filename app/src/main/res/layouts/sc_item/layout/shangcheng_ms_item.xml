<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_shangcheng_mx_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white_c"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_shangcheng_mx_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_shangcheng_mx_sales_sum"
                android:layout_width="65dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/bj_hong8"
                android:gravity="center"
                android:text="已抢2000件"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_shangcheng_mx_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="1.8dp"
            android:lines="2"
            android:text="傍海深红 深山野生普洱茶熟普洱茶茶饼"
            android:textColor="#333333"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#E51C23"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_shangcheng_mx_shop_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="120"
                android:textColor="#E51C23"
                android:textSize="16sp" />

            <TextView
                android:layout_width="38dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bj_hong2"
                android:gravity="center"
                android:text="到手价"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
