<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_dpzy_sp_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_c"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_dpzy_sp_item_img"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pro1" />


        <TextView
            android:id="@+id/tv_dpzy_sp_item_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="1.5dp"
            android:lines="2"
            android:text="傍海深红 深山野生普洱茶熟普洱茶茶饼"
            android:textColor="#333333"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#E51C23"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_dpzy_sp_item_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13832"
                android:textColor="#E51C23"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_dpzy_sp_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31924条评价"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_dpzy_sp_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="好评99%"
                android:textColor="#999999"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
