<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <ImageView
                android:id="@+id/iv_spxq_pj_item_head_pic"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_spxq_pj_item_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/iv_spxq_pj_item_goods_rank"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/icon_littlestar_seletced_copy_2" />

                    <ImageView
                        android:id="@+id/iv_spxq_pj_item_goods_rank1"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_littlestar_seletced_copy_2" />

                    <ImageView
                        android:id="@+id/iv_spxq_pj_item_goods_rank2"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_littlestar_seletced_copy_2" />

                    <ImageView
                        android:id="@+id/iv_spxq_pj_item_goods_rank3"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_littlestar_seletced_copy_2" />

                    <ImageView
                        android:id="@+id/iv_spxq_pj_item_goods_rank4"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_littlestar_normal" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_spxq_pj_item_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#666666"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_spxq_pj_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1.8dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_spxq_pj_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_spxq_pj_item_img1"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_spxq_pj_item_img2"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_spxq_pj_item_img3"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/btn_zan_normal" />

            <TextView
                android:id="@+id/tv_spxq_pj_item_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="21"
                android:textColor="#999999"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4" />

</LinearLayout>