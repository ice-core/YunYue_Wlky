<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_wddd_tc"
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <LinearLayout
        android:id="@+id/ll_wddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white_c"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_wddd_tou"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="13.7dp"
                android:layout_height="13.7dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_shop_3x" />


            <TextView
                android:id="@+id/tv_wddd_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="居家生活馆"
                android:textColor="#333333"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="11dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_wddd_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="交易成功"
                    android:textColor="@color/theme"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="#F4F4F4"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_wddd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image1_3x" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wddd_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="秋装潮牌连帽夹克男宽松ins上衣男中长款风衣男原宿风"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_wddd_spec_key_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白色:M"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_wddd_num"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:lines="1"
                android:text="x1"
                android:textColor="#999999"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wddd_wei1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_wddd_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="共1件商品"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:text="合计："
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_wddd_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="11dp"
                android:text="￥988.00"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wddd_wei"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="right">


            <TextView
                android:id="@+id/tv_wddd_shzt"
                android:layout_width="74dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/dz"
                android:gravity="center"
                android:singleLine="true"
                android:text="申请售后"
                android:textColor="#222222"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_wddd_bt"
                android:layout_width="74dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dz"
                android:gravity="center"
                android:singleLine="true"
                android:text="追加评价"
                android:textColor="#222222"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_wddd_bt1"
                android:layout_width="74dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/dz"
                android:gravity="center"
                android:singleLine="true"
                android:text="追加评价"
                android:textColor="#222222"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>