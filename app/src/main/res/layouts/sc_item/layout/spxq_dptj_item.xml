<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_spxq_dptj_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_spxq_dptj_item_original_img"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image1_dptj" />

        <TextView
            android:id="@+id/iv_spxq_dptj_item_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="1.8dp"
            android:lines="2"
            android:text="新品红酒杯最新产品发布"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/iv_spxq_dptj_item_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:text="￥2800"
            android:textColor="#F32608"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
