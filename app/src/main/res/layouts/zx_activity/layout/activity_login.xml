<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.administrator.yunyue.activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="登录"
                android:textColor="#000000"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginTop="59dp"
                android:src="@mipmap/logo" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_denglu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="登录"
                        android:textColor="@color/theme"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_denglu1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="9dp"
                        android:background="@color/theme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zhuce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="注册"
                        android:textColor="#E1E1E1 "
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_zhuce1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="9dp"
                        android:background="#E1E1E1" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="52dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:src="@drawable/public_icon_phone_3x" />

                <EditText
                    android:id="@+id/et_login_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="#CCCCCC"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="52dp"
                android:background="#DFDFDF" />

            <LinearLayout
                android:id="@+id/ll_hqyzm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="52dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="18dp"
                        android:src="@drawable/public_icon_password_3x" />

                    <EditText
                        android:id="@+id/et_login_yzm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_login_hqyzm"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bk_lan8"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="获取验证码"
                        android:textColor="@color/theme"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="52dp"
                    android:background="#DFDFDF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_denglu_mm"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="52dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="18dp"
                        android:src="@drawable/public_icon_password_3x" />

                    <EditText
                        android:id="@+id/et_login_mima"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="52dp"
                    android:background="#DFDFDF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_denglu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_login_denglu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="52dp"
                    android:background="@drawable/bj_lan100"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="52dp">

                    <TextView
                        android:id="@+id/tv_symmdl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:text="使用密码登录"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_zhmm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingTop="10dp"
                        android:text="找回密码"
                        android:textColor="#4A90E2"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zhuce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="52dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="18dp"
                        android:src="@drawable/public_icon_password_3x" />

                    <EditText
                        android:id="@+id/et_zhuce_mima"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="52dp"
                    android:background="#DFDFDF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="52dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/yqm" />

                    <EditText
                        android:id="@+id/et_zhuce_invitation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:background="@null"
                        android:hint="请输入邀请码(非必填)"
                        android:lines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="52dp"
                    android:background="#DFDFDF" />

                <TextView
                    android:id="@+id/tv_login_zhuce"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="52dp"
                    android:background="@drawable/bj_lan100"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_login_yhxy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="52dp"
                    android:gravity="center"
                    android:text="注册即代表你同意xxx《用户协议》"
                    android:textColor="#999999"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
